<div class="job-showcase">
  <h1>Choose Your Perfect Job</h1>
  <div class="jobs-list">
    <% @jobs.each do |job| %>
      <div class="job-item">
        <h2><%= link_to job.position, job_path(job) %></h2>
        <p><strong>Company:</strong> <%= job.company.name %></p>
        <p><strong>Description:</strong> <%= job.description %></p>
        <hr>
      </div>
    <% end %>
  </div>
  <div class="back-link">
    <%= link_to "Back to Profile", user_skills_path, class: "back-button" %>
  </div>
</div>

<div class="job-showcase">
  <div id="wrapper">
    <% @jobs.each do |job| %>
      <div class="card job-card">
        <div class="card-content">
          <p class="job-title"><%= job.position %></p>
          <p class="company-name"><%= job.company.name %></p>
          <p class="job-description"><%= job.description %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
