<div class='container'>

<div class="login-box">
  <h2>Login</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-page' }) do |f| %>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean, wrapper_class: 'remember-me-checkbox' if devise_mapping.rememberable? %>

        <div class="d-grid">
          <%= f.submit "Log in", class: 'btn btn-primary' %>
        </div>
      <% end %>

  <%= render "devise/shared/links" %>
</div>
</div>
