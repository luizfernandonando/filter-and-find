<div class="container">
  <div class="company-card-show">
    <div class="container">
      <h1>Company details</h1>
      <div class="d-flex justify-content-center">
        <div class="card-companiesshow">
          <h4><strong><%= @company.name %></strong></h4>
          <h4>SEEDS EMPRESA</h4>
          <p><%= @company.description %></p>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <%= link_to "Write a review", new_company_review_path(@company), class: "btn-jobs" %>
      </div>
    </div>
  </div>
</div>

<div class="cards-company">
  <% @company.reviews.each do |review| %>
    <div class="card-company">
      <div class="card-company-info">
        <span class="card-company-grad--video"><%= review.user.full_name %></span>
        <span><%= distance_of_time_in_words_to_now(review.created_at) %> ago</span>
      </div>

      <div class="card-company-heading">
        <a><%= review.content %></a>
      </div>

      <div class="card-company-tags">
        <div class="card-company-tag">
          <% review.rating.times do %>
            <i class="fa-solid fa-star" style="color: #f6d813;"></i>
          <% end %>
          <% (5 - review.rating).times do %>
            <i class="fa-regular fa-star" style="color: #f6d813;"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Back to Companies", companies_path(@company), class: "btn-jobs" %>
